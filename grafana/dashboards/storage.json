{
  "dashboard": {
    "title": "AkiDB Storage Metrics",
    "uid": "akidb-storage",
    "tags": ["akidb", "storage", "s3"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "time": {
      "from": "now-3h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Tier Distribution Over Time",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "akidb_tier_distribution_collections{tier=\"hot\"}",
            "legendFormat": "Hot Tier",
            "refId": "A"
          },
          {
            "expr": "akidb_tier_distribution_collections{tier=\"warm\"}",
            "legendFormat": "Warm Tier",
            "refId": "B"
          },
          {
            "expr": "akidb_tier_distribution_collections{tier=\"cold\"}",
            "legendFormat": "Cold Tier",
            "refId": "C"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Collections"
          },
          {
            "format": "short"
          }
        ],
        "xaxis": {
          "mode": "time"
        },
        "lines": true,
        "fill": 2,
        "linewidth": 2,
        "stack": true,
        "legend": {
          "show": true,
          "values": true,
          "current": true,
          "total": true
        }
      },
      {
        "id": 2,
        "title": "S3 Upload/Download Bandwidth",
        "type": "graph",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(akidb_s3_operations_total{operation=\"put\"}[5m]))",
            "legendFormat": "Uploads/sec",
            "refId": "A"
          },
          {
            "expr": "sum(rate(akidb_s3_operations_total{operation=\"get\"}[5m]))",
            "legendFormat": "Downloads/sec",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "ops",
            "label": "Operations/sec"
          },
          {
            "format": "short"
          }
        ],
        "xaxis": {
          "mode": "time"
        },
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "legend": {
          "show": true,
          "values": true,
          "current": true,
          "avg": true,
          "max": true
        }
      },
      {
        "id": 3,
        "title": "WAL Size",
        "type": "graph",
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(akidb_wal_size_bytes) / 1024 / 1024",
            "legendFormat": "WAL Size (MB)",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "decmbytes",
            "label": "Size"
          },
          {
            "format": "short"
          }
        ],
        "xaxis": {
          "mode": "time"
        },
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "legend": {
          "show": true,
          "values": true,
          "current": true,
          "avg": true,
          "max": true
        },
        "thresholds": [
          {
            "value": 100,
            "colorMode": "critical",
            "op": "gt",
            "fill": false,
            "line": true
          }
        ]
      },
      {
        "id": 4,
        "title": "Snapshot Activity",
        "type": "graph",
        "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(akidb_compactions_total[5m]))",
            "legendFormat": "Snapshots/min",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "ops",
            "label": "Compactions/min"
          },
          {
            "format": "short"
          }
        ],
        "xaxis": {
          "mode": "time"
        },
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "legend": {
          "show": true,
          "values": true,
          "current": true,
          "avg": true,
          "max": true
        }
      },
      {
        "id": 5,
        "title": "Collection Size Distribution",
        "type": "graph",
        "gridPos": {"x": 0, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "akidb_collection_size_vectors",
            "legendFormat": "{{collection_id}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Vectors"
          },
          {
            "format": "short"
          }
        ],
        "xaxis": {
          "mode": "time"
        },
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "legend": {
          "show": true,
          "alignAsTable": true,
          "values": true,
          "current": true,
          "max": true,
          "sort": "current",
          "sortDesc": true
        }
      },
      {
        "id": 6,
        "title": "Total Vectors",
        "type": "stat",
        "gridPos": {"x": 12, "y": 16, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "akidb_total_vectors",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "textMode": "value_and_name",
          "orientation": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 0,
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "green"
                },
                {
                  "value": 1000000,
                  "color": "yellow"
                },
                {
                  "value": 10000000,
                  "color": "red"
                }
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "title": "S3 Error Rate",
        "type": "stat",
        "gridPos": {"x": 18, "y": 16, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "100 * sum(rate(akidb_s3_operations_total{status=\"error\"}[5m])) / sum(rate(akidb_s3_operations_total[5m]))",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "textMode": "value",
          "orientation": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "decimals": 2,
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "green"
                },
                {
                  "value": 1,
                  "color": "yellow"
                },
                {
                  "value": 5,
                  "color": "red"
                }
              ]
            }
          }
        }
      },
      {
        "id": 8,
        "title": "Memory by Component",
        "type": "graph",
        "gridPos": {"x": 12, "y": 20, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "akidb_memory_usage_bytes / 1024 / 1024 / 1024",
            "legendFormat": "{{component}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "decgbytes",
            "label": "Memory (GB)"
          },
          {
            "format": "short"
          }
        ],
        "xaxis": {
          "mode": "time"
        },
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "stack": true,
        "legend": {
          "show": true,
          "alignAsTable": true,
          "values": true,
          "current": true,
          "max": true
        }
      }
    ]
  }
}
