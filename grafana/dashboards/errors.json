{
  "dashboard": {
    "title": "AkiDB Errors & Health",
    "uid": "akidb-errors",
    "tags": ["akidb", "errors", "health"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "10s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "Error Rate by Endpoint",
        "type": "graph",
        "gridPos": {"x": 0, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(akidb_http_requests_total{status_code=~\"5..\"}[5m])) by (path)",
            "legendFormat": "{{path}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "reqps",
            "label": "Errors/sec"
          },
          {
            "format": "short"
          }
        ],
        "xaxis": {
          "mode": "time"
        },
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "legend": {
          "show": true,
          "alignAsTable": true,
          "values": true,
          "current": true,
          "avg": true,
          "max": true,
          "sort": "current",
          "sortDesc": true
        },
        "thresholds": [
          {
            "value": 0.1,
            "colorMode": "critical",
            "op": "gt",
            "fill": false,
            "line": true
          }
        ]
      },
      {
        "id": 2,
        "title": "4xx vs 5xx Distribution",
        "type": "graph",
        "gridPos": {"x": 12, "y": 0, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(akidb_http_requests_total{status_code=~\"4..\"}[5m]))",
            "legendFormat": "4xx Client Errors",
            "refId": "A"
          },
          {
            "expr": "sum(rate(akidb_http_requests_total{status_code=~\"5..\"}[5m]))",
            "legendFormat": "5xx Server Errors",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "reqps",
            "label": "Errors/sec"
          },
          {
            "format": "short"
          }
        ],
        "xaxis": {
          "mode": "time"
        },
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "stack": false,
        "legend": {
          "show": true,
          "values": true,
          "current": true,
          "avg": true,
          "max": true
        }
      },
      {
        "id": 3,
        "title": "S3 Errors by Operation",
        "type": "graph",
        "gridPos": {"x": 0, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(akidb_s3_operations_total{status=\"error\"}[5m])) by (operation)",
            "legendFormat": "{{operation}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "ops",
            "label": "Errors/sec"
          },
          {
            "format": "short"
          }
        ],
        "xaxis": {
          "mode": "time"
        },
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "legend": {
          "show": true,
          "values": true,
          "current": true,
          "avg": true,
          "max": true
        }
      },
      {
        "id": 4,
        "title": "DLQ Size Over Time",
        "type": "graph",
        "gridPos": {"x": 12, "y": 8, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(akidb_dlq_size)",
            "legendFormat": "DLQ Entries",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "short",
            "label": "Queue Size"
          },
          {
            "format": "short"
          }
        ],
        "xaxis": {
          "mode": "time"
        },
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "legend": {
          "show": true,
          "values": true,
          "current": true,
          "avg": true,
          "max": true
        },
        "thresholds": [
          {
            "value": 100,
            "colorMode": "critical",
            "op": "gt",
            "fill": true,
            "line": true
          }
        ]
      },
      {
        "id": 5,
        "title": "Circuit Breaker State",
        "type": "stat",
        "gridPos": {"x": 0, "y": 16, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "akidb_circuit_breaker_state",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "none",
          "colorMode": "background",
          "textMode": "value",
          "orientation": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "mappings": [
              {
                "type": "value",
                "value": "0",
                "text": "Closed"
              },
              {
                "type": "value",
                "value": "1",
                "text": "Half-Open"
              },
              {
                "type": "value",
                "value": "2",
                "text": "Open"
              }
            ],
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "green"
                },
                {
                  "value": 1,
                  "color": "yellow"
                },
                {
                  "value": 2,
                  "color": "red"
                }
              ]
            }
          }
        }
      },
      {
        "id": 6,
        "title": "Circuit Breaker Error Rate",
        "type": "stat",
        "gridPos": {"x": 6, "y": 16, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "akidb_circuit_breaker_error_rate * 100",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "textMode": "value",
          "orientation": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "percent",
            "decimals": 2,
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "green"
                },
                {
                  "value": 5,
                  "color": "yellow"
                },
                {
                  "value": 10,
                  "color": "red"
                }
              ]
            }
          }
        }
      },
      {
        "id": 7,
        "title": "Failed Background Jobs",
        "type": "graph",
        "gridPos": {"x": 12, "y": 16, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(akidb_background_worker_runs_total{status=\"error\"}[5m])) by (worker_type)",
            "legendFormat": "{{worker_type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          {
            "format": "ops",
            "label": "Errors/sec"
          },
          {
            "format": "short"
          }
        ],
        "xaxis": {
          "mode": "time"
        },
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "legend": {
          "show": true,
          "values": true,
          "current": true,
          "avg": true,
          "max": true
        }
      },
      {
        "id": 8,
        "title": "S3 Retry Count",
        "type": "graph",
        "gridPos": {"x": 0, "y": 24, "w": 12, "h": 8},
        "targets": [
          {
            "expr": "sum(rate(akidb_s3_retries_total[5m]))",
            "legendFormat": "Retries/sec",
            "refId": "A"
          },
          {
            "expr": "sum(rate(akidb_s3_permanent_failures_total[5m]))",
            "legendFormat": "Permanent Failures/sec",
            "refId": "B"
          }
        ],
        "yaxes": [
          {
            "format": "ops",
            "label": "Operations/sec"
          },
          {
            "format": "short"
          }
        ],
        "xaxis": {
          "mode": "time"
        },
        "lines": true,
        "fill": 1,
        "linewidth": 2,
        "legend": {
          "show": true,
          "values": true,
          "current": true,
          "avg": true,
          "max": true
        }
      },
      {
        "id": 9,
        "title": "Total S3 Permanent Failures",
        "type": "stat",
        "gridPos": {"x": 12, "y": 24, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(akidb_s3_permanent_failures_total)",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "textMode": "value_and_name",
          "orientation": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 0,
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "green"
                },
                {
                  "value": 1,
                  "color": "yellow"
                },
                {
                  "value": 10,
                  "color": "red"
                }
              ]
            }
          }
        }
      },
      {
        "id": 10,
        "title": "Total DLQ Size",
        "type": "stat",
        "gridPos": {"x": 18, "y": 24, "w": 6, "h": 4},
        "targets": [
          {
            "expr": "sum(akidb_dlq_size)",
            "refId": "A"
          }
        ],
        "options": {
          "graphMode": "area",
          "colorMode": "value",
          "textMode": "value_and_name",
          "orientation": "auto"
        },
        "fieldConfig": {
          "defaults": {
            "unit": "short",
            "decimals": 0,
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {
                  "value": 0,
                  "color": "green"
                },
                {
                  "value": 50,
                  "color": "yellow"
                },
                {
                  "value": 100,
                  "color": "red"
                }
              ]
            }
          }
        }
      }
    ]
  }
}
